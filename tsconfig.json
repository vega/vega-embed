{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es5",
    "module": "ES2015",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "preserveConstEnums": true,
    "noEmitOnError": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "importHelpers": true,
    "lib": ["es6", "dom"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
