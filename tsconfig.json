{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "preserveConstEnums": true,
    "noEmitOnError": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "inlineSourceMap": true,
    "typeRoots" : ["./typings", "node_modules/@types"],
    "lib": ["es6", "dom"]
  },
  "include": [
    "typings/vega.d.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
