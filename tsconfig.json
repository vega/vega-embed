{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "build",
    "noEmit": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "fast-json-patch/index.mjs": ["./node_modules/fast-json-patch/index.d.ts"]
    }
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
