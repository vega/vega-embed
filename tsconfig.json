{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "preserveConstEnums": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "lib": ["es6", "dom"]
  },
  "files": ["src/index.ts"],
  "include": ["node_modules/vega-lite/typings/*.d.ts"]
}
