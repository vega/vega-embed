{
  "tslint.options": {
    "project": "tsconfig.json",
    "typeCheck": true
  },
  "defaultSeverity": "error",
  "extends": ["tslint:recommended", "tslint-config-prettier"],
  "rules": {
    "quotemark": [true, "single"],
    "arrow-parens": [true, "ban-single-arg-parens"],
    "no-console": [true, "log", "error"],
    "no-bitwise": false,
    "interface-name": false
  }
}
