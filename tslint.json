{
  "tslint.options": {
    "project": "tsconfig.json",
    "typeCheck": true
  },
  "defaultSeverity": "error",
  "extends": [
      "tslint:recommended"
  ],
  "rules": {
    "quotemark": [true, "single"],
    "arrow-parens": [true, "ban-single-arg-parens"],
    "no-console": [true, "log", "error"],
    "max-line-length": [false],
    "no-bitwise": [false]
  }
}
